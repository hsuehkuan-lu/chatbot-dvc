{
    "name": "ChatbotLSTM",
    "n_gpu": 1,
    "embed_size": 50,
    "hidden_size": 512,
    "decoder_lr_ratio": 5.0,

    "encoder_arch": {
        "type": "ChatbotEncoder",
        "args": {
            "n_layers": 2,
            "dropout": 0.1
        }
    },
    "attn_arch": {
        "type": "Attention",
        "args": {
            "method": "concat"
        }
    },
    "decoder_arch": {
        "type": "LuongAttnDecoderRNN",
        "args": {
            "attn_model": "concat",
            "n_layers": 2,
            "dropout": 0.1
        }
    },
    "inference_arch": {
        "type": "GreedySearchDecoder",
        "args": {}
    },
    "preprocess": {
        "type": "ChatbotDataPreprocess",
        "args": {
            "data_dir": "data/cornell movie-dialogs corpus",
            "sent_len": 32
        }
    },
    "data_loader": {
        "type": "ChatbotDataLoader",
        "args":{
            "data_dir": "data/cornell movie-dialogs corpus",
            "filename": "formatted_movie_lines.csv",
            "sent_len": 32,
            "text_field_path": null,
            "vocab_path": null,
            "batch_size": 256,
            "init_token": "<init>",
            "eos_token": "<eos>",
            "min_freq": 5,
            "shuffle": true,
            "validation_split": 0.1,
            "debug": false
        }
    },
    "inference_data_loader": {
        "type": "InferenceChatbotDataLoader",
        "args":{}
    },
    "encoder_optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-4,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "decoder_optimizer": {
        "type": "Adam",
        "args":{
            "lr": 5e-4,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mask_nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "do_validation": true,
        
        "monitor": "min val_loss",
        "early_stop": 10,
        "clip": 50.0,

        "tensorboard": true
    }
}
